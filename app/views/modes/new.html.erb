<script>
$(document).ready(function(){
  $('#mode_title').focus();
  $('#mode_title').keyup(function(){
    if ($('#mode_title').val().length > 0) {
      $(':submit').prop('disabled', false);
    } else {
      $(':submit').prop('disabled', true);
    }
  })
})
</script>

<h1>調停作成</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= form_for [@project, @mode] do |f| %>
      <%= f.label :title %><br>
      <%= f.text_field :title , class: 'form-control', placeholder: 'Mode name here' %>
      <%= f.submit "作成", class: "btn btn-primary col-md-4", style: "margin-top:20px;", disabled: true %>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-3" style="margin-top:10px;">
    <%= link_to 'Back', project_modes_path %>
  </div>
</div>
