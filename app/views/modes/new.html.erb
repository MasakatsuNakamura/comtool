<h1>BswMConfig作成</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= form_for([@project, @mode]) do |f| %>
      <%= render 'shared/error_messages', object: @mode %>
      <%= f.label :title, "BswMConfig名称" %><br>
      <%= f.text_field :title , class: 'form-control', placeholder: 'Mode name here' %>
      <%= f.submit "作成", class: "btn btn-primary col-md-4", style: "margin-top:20px;" %>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-3" style="margin-top:10px;">
    <%= link_to 'Back', project_modes_path(@project) %>
  </div>
</div>
