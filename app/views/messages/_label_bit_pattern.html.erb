<% message_bit_size = message.bytesize * 8 %>

<% if message.byte_order == :littel_endian then %>
  <% message_bit_size.times do |i| %>
  <th><%= "b#{message_bit_size - i -1}" %></th>
  <% end %>
<% else %>
  <% message.bytesize.times do |byte| %>
    <% 8.times do |bit| %>
      <th><%= "b#{(byte*8) + (7-bit)}" %></th>
    <% end %>
  <% end %>
<% end %>
