<h1>プロジェクト作成</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= form_for(@project) do |f| %>
      <%= render 'shared/error_messages', object: @project %>

      <%= f.label :name %><br>
      <%= f.text_field :name , class: 'form-control'%>

      <!-- TODO:disabled タスク #654 -->
      <%= f.label :duplicate_source, '複製元(未対応)' %>
      <%= f.select :duplicate_source, {
        "project 1(RPort:1,PPort:1)"=>1,
        "project 2(RPort:2,PPort:2)"=>2,
        "project 3(RPort:4,PPort:4)"=>4
        }, { :selected => 0 }, class: 'form-control', disabled: true %>

      <%= f.label :qines_version_number %><br>
      <%= text_field :qines_version_number, :name, class: 'form-control', readonly: true %>

      <%= f.label :protocol_number %><br>
      <%= text_field :communication_protocol, :name, class: 'form-control', readonly: true %>

      <%= f.submit "作成", class: "btn btn-primary col-md-4", style: "margin-top:20px;"  %>

    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-3" style="margin-top:10px;">
    <%= link_to 'Back', home_index_path %>
  </div>
</div>
